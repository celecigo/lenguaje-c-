# include <stdio.h>
# include <math.h>
#include <iostream>

int main()
{
    float r,h,Area;

	printf("\ncalculando area de Cilindro:\n");

	printf("Ingrese valor del radio=");
	scanf("%f",&r);
	
	printf("Ingrese valor de la altura=");
	scanf("%f",&h);
	
	Area = 2*(3.1416)*(r)+(r+h);
	printf("El area de un trapezoide es =%f",Area);
	
	


	return 0;
}